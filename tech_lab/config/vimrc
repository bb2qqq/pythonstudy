colorscheme mario
"set hlsearch
set expandtab
set tabstop=8
set shiftwidth=4
set softtabstop=4
"set autoindent
set number
set title
vnoremap <C-c> "*y
syntax on

" ctags optimization
set autochdir

" allow auto complete only in currrent file
set complete-=i


set tags=./tags; /media/sf_zen/genesis/backend/
noremap <Leader>t :!ctags-proj.sh<CR>


" vsplit switch optimization
nnoremap <C-J> <C-W><C-J>
nnoremap <C-K> <C-W><C-K>
nnoremap <C-L> <C-W><C-L>
nnoremap <C-H> <C-W><C-H>

" resize current buffer by +/- 5
nnoremap <A-U> :vertical resize -5<cr>
nnoremap <A-I> :resize +5<cr>
nnoremap <A-O> :resize -5<cr>
nnoremap <A-P> :vertical resize +5<cr>

"Taglist settings
ab tlg TlistToggle
ab vres vertical resize
filetype plugin on

highlight ExtraWhitespace ctermbg=grey guibg=grey
match ExtraWhitespace /\s\+$/

set clipboard=unnamedplus
