function dee { w3m  "http://www.oxfordlearnersdictionaries.com/definition/american_english/$1"; }
function dss { w3m  "http://wordreference.com/definicion/$1"; }
function des { w3m  "http://www.spanishdict.com/translate/$1"; }
function dec { w3m  "http://dict.cn/$1"; }
export -f dee
export -f dss
export -f des
export -f dec


