<div tabindex="-1" class="zm-item-answer "

itemscope itemtype="http://schema.org/Answer"
data-aid="268609"
data-atoken="12873806"
data-collapsed="0"
data-created="1310338019"
data-deleted="0"
data-helpful="1"
data-isowner="0"
data-copyable="1"


>
<a class="zg-anchor-hidden" name="answer-268609"></a>


<div class="zm-votebar">
<button class="up ">
<i class="icon vote-arrow"></i>
