<div tabindex="-1" class="zm-item-answer "

itemscope itemtype="http://schema.org/Answer"
data-aid="5716397"
data-atoken="26030173"
data-collapsed="0"
data-created="1401005522"
data-deleted="0"
data-helpful="1"
data-isowner="0"
data-copyable="1"


>
<a class="zg-anchor-hidden" name="answer-5716397"></a>


<div class="zm-votebar">
<button class="up ">
<i class="icon vote-arrow"></i>
